<form class="form-group new-movie">
  <input class="form-control" type="text" id="movie-title" placeholder="Search Movie">
  <select class="custom-select" id="genre-select">
    <option selected>Select Genre</option>
    <option value="Action/Adventure">Action/Adventure</option>
    <option value="Animation">Animation</option>
    <option value="Comedy">Comedy</option>
    <option value="Crime">Crime</option>
    <option value="Drama">Drama</option>
    <option value="Fantasy">Fantasy</option>
    <option value="Historical">Historical</option>
    <option value="Horror">Horror</option>
    <option value="Mystery/Thriller">Mystery/Thriller</option>
    <option value="Science Fiction">Science Fiction</option>
    <option value="Western">Western</option>
  </select>
  <button class="btn btn-danger" type="submit">Add to Watchlist</button>
</form>

<div class="d-grid gap-2 d-md-flex justify-content-md-end col-2">
  <button class="btn btn-warning me-md-2" id="logout">logout</button>
</div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Movie Title</th>
      <th scope="col">Genre</th>
      <th scope="col">Watched</th>
    </tr>
  </thead>
  <tbody>
    <td>
      <form class="form-group">
        <input class="form-control" type="text" placeholder="Enter Movie Title">
    </td>
    <td><select class="custom-select">
        <option selected>Select Genre</option>
        <option value="1">Action</option>
        <option value="2">Animation</option>
        <option value="3">Classic</option>
        <option value="4">Comedy</option>
        <option value="5">Documentary</option>
        <option value="6">Drama</option>
        <option value="7">Family</option>
        <option value="8">Horror</option>
        <option value="9">Romance</option>
        <option value="10">Sci-Fi</option>
        <option value="11">Thriller</option>
        <option value="12">Western</option>
      </select></td>
    <td> <button class="btn btn-danger" type="submit">Mark as watched</button>
      </form>
    </td>

    {{#each movies}}
    <tr>
      <td>{{dataValues.movie}}</td>
      <td>{{dataValues.genre}}</td>
      {{#if dataValues.unwatched}}
      <td>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="checked" id="flexCheckDefault"
            movie-id="{{dataValues.id}}">
          <label class="form-check-label" movie-id="{{dataValues.id}}" for="flexCheckDefault">Unwatched</label>
        </div>
      </td>
      {{else}}
      <td>Watched</td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>

<div class="form-group">
  <form method="POST" action="/logout?_method=DELETE">
    <button type="submit" class="btn btn-danger" id="logout">logout</button>
  </form>
</div>

<script src="/js/newMovie.js"></script>
<script src="/js/updateStatus.js"></script>
<script src="/js/logout.js"></script>