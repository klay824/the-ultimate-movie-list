<div class="row">
    <h1 class="col-12" id="welcome"> Welcome to Your Ultimate Movie Watchlist</h1>
    <h4 class="col-12">
        <p class="text-end">Please sign in or sign up.</p>
    </h4>
    <img src="/assets/movienight-background.png" class="img-fluid col-md-6" alt="tub of popcorn and movie reel" />

    <div class="col-md-3">
        <h2>Login</h2>

        <form class="form login-form">
            <div class="form-group">
                <label for="email-login">email:</label><br />
                <input class="form-control" type="text" id="email-login" />
            </div>
            <div class="form-group">
                <label for="password-login">password:</label><br />
                <input class="form-control" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="btn btn-danger" type="submit">login</button>
            </div>
        </form>
    </div>

    <div class="col-md-3">
        <h2>Sign Up</h2>
        <form class="form signup-form">
            <div class="form-group">
                <label for="name">name:</label><br />
                <input class="form-control" type="text" id="name" />
            </div>
            <div class="form-group">
                <label for="email-signup">email:</label><br />
                <input class="form-control" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">password:</label><br />
                <input class="form-control" type="password" id="password-signup" />

            </div>
            <div class="form-group">
                <button class="btn btn-danger" type="submit">signup</button>
            </div>
        </form>
    </div>
</div>


